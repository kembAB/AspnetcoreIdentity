@{

}
@model WebApplication1.Models.People.Person
<h3>Edit Person</h3>
<form action="Edit" method="post">
    <input asp-for="Id" type="number" value="@Model.Id" hidden/>


    <div class="form-element">
        <label>Name: </label>
        <input asp-for="Name" type="text" value="@Model.Name"/>
    
    </div>
    <div class="form-element">
        <label>City: </label>
        <select asp-for="PersonCityId" asp-items="@ViewBag.Cities" value="@Model.PersonCityId"></select>
    </div>
    <div class="form-element">
        <label>Phone Number: </label>
        <input type="number" step="1" asp-for="PhoneNumber"/>
    </div>
    
    <input type="submit" />
</form>
