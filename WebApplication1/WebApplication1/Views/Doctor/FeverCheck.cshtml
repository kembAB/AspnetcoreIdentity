@{      
    ViewData["Title"] = "Fever Check";
}

<h1>Fever Check</h1>
<h2>Check your temperature here</h2>
@if(ViewBag.Message != null)
 {
   <h3>@ViewBag.Message</h3>
 }
<form asp-controller="Doctor" asp-action="FeverCheck" method="post">
    <label>Temperature</label>
    <input type="number" name="temperature" step="0.1" />
    <input type="submit" />
</form>